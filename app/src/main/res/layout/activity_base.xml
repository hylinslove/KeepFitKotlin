<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.chinastis.keepfitkotlin.base.BaseActivity">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:scaleType="center"
            android:id="@+id/navigation_icon_base"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/icon_back"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/title_base"
            android:text="@string/app_name"
            android:paddingLeft="10dp"
            android:background="@drawable/bac_base_title"
            android:layout_toRightOf="@+id/navigation_icon_base"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/navigation_text_end"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bac_base_stroke"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:scaleType="center"
            android:id="@+id/navigation_icon_end"
            android:clickable="true"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="50dp" />



    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:background="@color/color_loc_bac"
        android:id="@+id/lock"
        android:clickable="true"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="1dp"
        android:background="@color/black"
        android:id="@+id/content_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
