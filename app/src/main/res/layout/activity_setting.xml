<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinastis.keepfitkotlin.ui.SettingActivity">

    <com.chinastis.keepfitkotlin.widget.NumberSelector
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/number_selector_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.chinastis.keepfitkotlin.widget.NumberSelector>

    <LinearLayout
        android:layout_above="@+id/number_selector_input"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="身高:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:padding="7dp"
                android:layout_width="0dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/height_setting"
                android:text="170 cm"
                android:drawableRight="@drawable/icon_more"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/text_light_gray"
                android:layout_weight="2"
                android:padding="7dp"
                android:layout_width="0dp"
                android:layout_height="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="目标体重:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:padding="7dp"
                android:layout_width="0dp"
                android:layout_height="60dp" />

            <TextView
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/text_light_gray"
                android:layout_weight="2"
                android:padding="7dp"
                android:layout_width="0dp"
                android:layout_height="60dp" />

        </LinearLayout>

        <TextView
            android:textColor="@color/text_light_gray"
            android:id="@+id/goal_setting"
            android:textSize="42sp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/confirm_setting"
        android:background="@drawable/bac_button"
        android:textColor="@color/text_light_gray"
        android:layout_alignParentBottom="true"
        android:text="确认"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
